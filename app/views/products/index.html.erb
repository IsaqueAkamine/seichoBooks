<h1>Cadastro de Produtos</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Produto Categoria</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.product_category.name %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Visualizar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Excluir produto: ' + product.name + '?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_product_path %>
