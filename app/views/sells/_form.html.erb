<%= simple_form_for(@sell) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.association :company %>
  <%= f.association :user, label_method: :email %>
  <%= f.association :product %>
  <%= f.input :price_total %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
