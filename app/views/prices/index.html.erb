<h1>Lista de Preços</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Empresa</th>
      <th>Preço</th>
      <th>Data Inicial</th>
      <th>Data Final</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.product.name %></td>
        <td><%= price.company.name %></td>
        <td><%= number_to_currency(price.price, :separator => ",", :delimiter => ".", :unit => "R$") %></td>
        <td><%= price.starts_at %></td>
        <td><%= price.end_at %></td>
        <td><%= link_to 'Editar', edit_price_path(price) %></td>
        <td><%= link_to 'Excluir', price, method: :delete, data: { confirm: 'Excluir preço do produto: ' + price.product.name + '?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

