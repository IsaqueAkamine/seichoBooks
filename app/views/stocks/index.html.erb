<h1>Lista de Estoque</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Produto</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.company.name %></td>
        <td><%= stock.product.name %></td>
        <td><%= stock.quantity %></td>
        <td><%= link_to 'Editar', edit_stock_path(stock) %></td>
        <td><%= link_to 'Excluir', stock, method: :delete, data: { confirm: 'Excluir estoque do produto: ' + stock.product.name + '?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Estoque', new_stock_path %>
